<schemalist>
	<schema id="de.wordclock.renderer.seconds">
		<key name="smooth" type="b">
			<default>true</default>
		</key>
		<key name="width" type="y">
			<range min="0" max="60" />
			<default>3</default>
		</key>
		<key name="background-color" type="(qyy)">
			<default>(0,0,25)</default>
		</key>
		<key name="seconds-color" type="(qyy)">
			<default>(0,255,255)</default>
		</key>
		<key name="background-rotate" type="u">
			<default>0</default>
		</key>
		<key name="seconds-rotate" type="u">
			<default>3600</default>
		</key>
	</schema>
</schemalist>
